{
    "compilerOptions": {
        "outDir": "./dist",
        "sourceMap": true,
        "noImplicitAny": true,
        "module": "commonjs",
        "target": "es6",
        "jsx": "react",
        "removeComments": true,
        "strict": true,
        "strictNullChecks": true,
        "noImplicitThis": true,
        "alwaysStrict": true,
        "noUnusedLocals": true,
        "noImplicitReturns": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true
    },
    "include": [
      "./src/**/*.ts",
      "./src/**/*.tsx",
      "../typings/index.d.ts"
    ],
    "exclude": [
      "**/*.d.ts"
    ]
}
