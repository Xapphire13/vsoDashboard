{
  "compilerOptions": {
    "target": "es5",
    "lib": [ "es2015" ],
    "module": "commonjs",
    "outDir": "./dist",
    "removeComments": true,
    "strict": true,
    "strictNullChecks": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "noUnusedLocals": true,
    "noImplicitReturns": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "include": [
    "./src/**/*.ts",
    "../typings/index.d.ts"
  ],
  "exclude": [
    "**/*.d.ts"
  ]
}
